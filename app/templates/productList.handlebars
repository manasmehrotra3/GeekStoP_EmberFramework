<div id="create-item">
	<table width="925px">
	 <tr>
	  <th colspan="7" style="text-align: left;font-size:24px;margin-right:500px;">Hi {{Em.MyApp.user.name}}
	   {{#view Em.MyApp.AccessButton action="logout"}}&nbsp;Log out&nbsp;{{/view}}</th>
	 </tr>
	 <tr>
	  <th colspan="6" style="text-align: left;font-size:32px">Select Product</th>
	 </tr>
	 <tr>
	  <th colspan="4">Best Selling Books</th>
	 </tr>
	 <tr>
	 <td style="text-align: left;font-size: 10px">
	  {{#each contentBooks}}	   
	    {{#view Em.ThumbnailPhotoView contentBinding="this" classNames="thumbnailItem"}}
	    	<img {{bindAttr src="Books"}} height="175" width="110" /><br />
	    {{/view}}
	  {{/each}} 
	  </td>
	 <tr>
	  <th colspan="4">Mobiles & Mobile Accessories</th>
	 </tr>
	 <tr>
	  <td style="text-align: left;font-size: 10px" valign="top">
	  	 {{#each contentMobiles}}	   
	    {{#view Em.ThumbnailPhotoView contentBinding="this" classNames="thumbnailItem"}}
	    	<img {{bindAttr src="Mobiles"}} height="175" width="110" /><br />
	    {{/view}}
	  {{/each}} 	
	  </td>	
	 </tr>
	</table>
</div>